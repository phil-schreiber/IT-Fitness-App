<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"     
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:fillViewport="true"    
    android:background="#ffffff"     
    >
    <LinearLayout 
        android:id="@+id/question"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    
   
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <LinearLayout 
    android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:gravity="top"    
    android:background="#d4d4d4" 
    android:orientation="horizontal">
    <df.denkfabrik.itfitness.CustomButtonView
        android:layout_width="90dp"
	android:layout_height="35dp"
	android:layout_marginLeft="10dp"
	android:background="@drawable/back"
	android:id="@+id/backButton"
	android:onClick="goBack"	
	android:text="@string/menu"
	
	/>
<df.denkfabrik.itfitness.BoldCustomTextView
    android:id="@+id/qtitle"    
    android:textColor="#000"
    android:background="#d4d4d4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"                  
    android:textSize="20sp"
    android:padding="15dp"                
    android:layout_weight="1"
    />

</LinearLayout>
<df.denkfabrik.itfitness.NativelyCustomTextView    
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"        
    android:id="@+id/qtext"
    android:textSize="18sp"
    android:textColor="#000"
    android:background="#fff"
    android:paddingLeft="15dp"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"
    />

</LinearLayout>
<LinearLayout     
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">
<LinearLayout 
    android:id="@+id/awrapper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="top"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    </LinearLayout>   
    <LinearLayout     
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical">
     <df.denkfabrik.itfitness.CustomButtonView                                              
        android:onClick="nextQ"
        android:text="@string/goon"
        android:layout_height="35dp"
        android:textColor="#fff"
        android:layout_width="100dp"        
        android:paddingRight="40dp"
        android:layout_marginRight="10dp"  
        android:layout_weight="2"                  
        android:background="@drawable/triangle"        
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />
    </LinearLayout> 
</LinearLayout>
</LinearLayout>
</ScrollView>