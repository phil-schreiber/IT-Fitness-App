<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="vertical"    
    tools:context=".EndGame"
    android:background="#ffffff" >    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top" 
		android:orientation="vertical"
    >
     <LinearLayout 
    android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:gravity="top"    
    android:background="#d4d4d4" 
    android:orientation="horizontal">
    	<df.denkfabrik.itfitness.CustomButtonView
        android:layout_width="90dp"
	android:layout_height="35dp"
	android:layout_marginLeft="10dp"
	android:background="@drawable/back"
	android:id="@+id/backButton"
	android:onClick="allNew"	
	android:text="@string/menu"
	
	/>
    <df.denkfabrik.itfitness.BoldCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"		                  
        android:textColor="#000"
        android:background="#d4d4d4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="15dp"    
        android:layout_weight="1"
        android:id="@+id/statisticsTitle"
        android:text="@string/statisticsTitle"
    	    />    	        	    
    	
    	</LinearLayout>
    	</LinearLayout>
    	<LinearLayout
    	   android:layout_width="match_parent"
    	   android:layout_height="wrap_content"
    	    >
     <df.denkfabrik.itfitness.NativelyCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"		                  
        android:textColor="#000"     
        android:padding="10dp"    
        android:gravity="left"
        android:text="@string/legendLeft"
    	    />
     <df.denkfabrik.itfitness.NativelyCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"		                  
        android:textColor="#000"                        
        android:padding="10dp"    
        android:gravity="right"
        android:layout_weight="1"
        android:text="@string/legendRight"
    	    />  
    	    
    	</LinearLayout>
    	<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"    
    android:background="#ffffff" >
    	    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" 		
		android:id="@+id/statisticsWrap"
    >
    	        
    	    </LinearLayout>
    	</ScrollView>
		    	
</LinearLayout>
