<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#ffffff" >
   

    <df.denkfabrik.itfitness.BoldCustomTextView
	    android:layout_width="fill_parent"
    android:layout_height="wrap_content"    
    android:text="@string/start_title"
    android:padding="10dp"    
    android:background="#d4d4d4"
    android:textColor="#000000"
    android:textSize="22sp"
    
    />
	    
	
	<df.denkfabrik.itfitness.NativelyCustomTextView
	    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/introText"
    android:text="@string/heureka"
    android:padding="10dp"
    
    android:background="#d4d4d4"
    android:textColor="#000000"
    android:textSize="18sp"
    android:layout_marginBottom="10dp"/>
	    
	
	 <ScrollView
        android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"    
    android:background="#ffffff">
    <LinearLayout    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"    
    android:background="#ffffff" >
    <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            
    <df.denkfabrik.itfitness.BoldButtonView
        android:id="@+id/Button01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"               
        android:minHeight="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="gamesOverview"
        android:text="@string/hello"
        android:textSize="24sp"
        android:textColor="#e2001a"
        android:gravity="left"
        android:background="@drawable/border_bottom" />
   
    				<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_counter"
                    android:id="@+id/updateCounterWrapper"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:padding="4dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    >

                <df.denkfabrik.itfitness.NativelyCustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/updateCounter" 
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="4pt"
                        />
                </LinearLayout>
    </FrameLayout>
    <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
    <df.denkfabrik.itfitness.CustomButtonView
        android:id="@+id/Button02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"               
        android:minHeight="50dp"
        android:onClick="ResumeGame"
        android:text="@string/resume"
        android:textSize="22sp" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:background="@drawable/border_bottom"
        />
    
    </FrameLayout>
    <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
    <df.denkfabrik.itfitness.CustomButtonView
        android:id="@+id/Button03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"               
        android:minHeight="50dp"
        android:onClick="ShowStatistics"
        android:text="@string/statistics"
        android:textSize="22sp" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:background="@drawable/border_bottom"
        />
    
    </FrameLayout>
     
	     <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
    <df.denkfabrik.itfitness.CustomButtonView
        android:id="@+id/Button04"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"               
        android:minHeight="50dp"
        android:onClick="AboutGame"
        android:text="@string/about"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:background="@drawable/border_bottom"
         />
   
    </FrameLayout>
	
      
        
  
    </LinearLayout>
   </ScrollView>

</LinearLayout>